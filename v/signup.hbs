{{> head}}

    <body>
        <div id="signup">
            <form id="form">
                {{PGTXT_SIGNUP_USERNAME}} <input name="username" type="text" placeholder="{{PGTXT_SIGNUP_USERNAME_PLC}}">
                <br><br>
                {{PGTXT_SIGNUP_PASSWORD}} <input name="password" type="password" placeholder="{{PGTXT_SIGNUP_PASSWORD_PLC}}">
                <br>
                {{PGTXT_SIGNUP_CONPASSWORD}} <input name="confirmpass" type="password" placeholder="{{PGTXT_SIGNUP_CONPASSWORD_PLC}}">
                <br><br>
                {{PGTXT_SIGNUP_EMAIL}} <input name="email" type="text" placeholder="{{PGTXT_SIGNUP_EMAIL_PLC}}">
                <br>
                {{PGTXT_SIGNUP_CONEMAIL}} <input name="confirmemail" type="text" placeholder="{{PGTXT_SIGNUP_CONEMAIL_PLC}}">
                <br>
                <div class="g-recaptcha" data-sitekey="6LelKgsUAAAAANN_lJ42z00Sonieb4yiM9kjyxpJ"></div>
            </form>
            <input type="button" value="{{PG_SIGNUP}}" onClick="submit()">
        </div>

        <script type="text/javascript">
            function submit() {
                var responseMessage = document.createElement('span');

                var formObject = $("#form").serializeObject();
                var captcha = grecaptcha.getResponse();

                formObject.captcha = captcha;

                $.post("/api/signup", formObject, function(data) {
                    responseMessage.innerHTML = data.text;
                    $("span").hide();
                    $("#signup").append(responseMessage);
                });
            }
        </script>
    </body>

{{> foot}}
